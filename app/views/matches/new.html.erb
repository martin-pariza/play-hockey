<script>
  $(document).ready(function(){
    ActivateTab('tab-matches');
  });
</script>



<% provide(:title, 'Nový zápas') %>
<%= link_to "Späť na zápasy", matches_path, class: "btn btn-default back-link" %>
<div class="jumbotron content">
  <h2>Nový zápas</h2>
  <div class="caption-delimiter"></div>
  <%= form_for(@match) do |f| %>
    <%= render 'shared/error_messages', target: @match %>
    <%= render 'match_fields', f: f %>
    <p>
      <%= f.submit "Vytvoriť zápas", class: "btn btn-large btn-primary" %>
    </p>
  <% end %>
</div>