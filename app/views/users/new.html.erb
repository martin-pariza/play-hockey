<script>
  $(document).ready(function(){
    ActivateTab('tab-play-hockey');
  });
</script>



<% provide(:title, 'Nový účet') %>
<%= link_to "Späť na hráčov", users_path, class: "btn btn-default back-link" %>
<div class="jumbotron content">
  <h2>Upraviť profil</h2>
  <div class="caption-delimiter"></div>
  <%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages', target: @user %>
    <%= render 'fields', f: f %>
    <%= render 'password_fields', f: f, password_hint: "" %>
    <p>
      <%= f.submit "Vytvoriť účet", class: "btn btn-large btn-primary" %>
    </p>
  <% end %>
</div>
