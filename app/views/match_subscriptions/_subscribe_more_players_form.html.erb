<script>
  $(document).ready(function(){
    ActivateTab('tab-matches');
  });
</script>



<% provide(:title, 'Pridať hráčov') %>
<h1>Pridať hráčov na zápas ...</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_tag action: 'create_more' do %>
      <%= render 'shared/error_messages' %>

      <%= f.label :firstname, "Meno" %>
      <%= f.text_field :firstname %>

      <%= f.label :lastname, "Priezvisko" %>
      <%= f.text_field :lastname %>

      <%= f.label :name_suffix, "Za menom (napr. \"st.\")" %>
      <%= f.text_field :name_suffix %>

      <%= f.label :email %>
      <%= f.text_field :email %>






      <%= f.submit "Vytvoriť účet", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
